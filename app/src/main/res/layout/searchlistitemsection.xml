<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBidder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_editsearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/edit" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.52"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_registerusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Katie Tyalor-Smith #123"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_creditinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card Not on file"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_hasbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Has Bid "
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#000000"/>

                <TextView
                    android:id="@+id/txt_haspaiditem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Has Paid item"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_invoice"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/invoice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_cartitem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/cart" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>